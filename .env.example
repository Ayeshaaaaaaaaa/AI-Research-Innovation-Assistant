# Environment Variables for ARIA CrewAI Application
# Copy this file to .env and fill in your values

# ======================
# API Configuration
# ======================

# OpenAI API Key (optional but recommended for better LLM performance)
OPENAI_API_KEY=your-openai-api-key-here

# HuggingFace API Token (optional but recommended for model access)
HF_TOKEN=your-huggingface-token-here

# Alternative HuggingFace token variable name (if using HF_TKN instead)
# HF_TKN=your-huggingface-token-here

# ======================
# Application Configuration  
# ======================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum number of concurrent tasks
MAX_CONCURRENT_TASKS=5

# Timeout for external API calls (in seconds)
API_TIMEOUT=30

# Health check interval (in seconds)
HEALTH_CHECK_INTERVAL=30

# ======================
# Deployment Configuration
# ======================

# Environment (development, staging, production)
ARIA_ENV=production

# Custom configuration directory (optional)
# ARIA_CONFIG_DIR=src/aria/config

# Server host and port for web server mode
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ======================
# Monitoring Configuration
# ======================

# Enable JSON logging for structured logs
ENABLE_JSON_LOGGING=false

# Log file path (optional)
LOG_FILE=logs/aria.log

# Resource monitoring interval (in seconds)
RESOURCE_MONITOR_INTERVAL=30

# ======================
# Error Handling Configuration
# ======================

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Retry delay in seconds (with exponential backoff)
RETRY_DELAY=2.0

# Circuit breaker failure threshold
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker recovery timeout (in seconds)  
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# ======================
# Security Configuration
# ======================

# API rate limiting (requests per minute)
# RATE_LIMIT_PER_MINUTE=60

# Authentication token for API access (if needed)
# API_AUTH_TOKEN=your-secure-token-here